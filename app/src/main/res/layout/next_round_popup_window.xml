<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="#34c6c1"
        android:text="@string/end_round_header_text"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="162dp" />

    <TextView
        android:id="@+id/points_in_round_popUp_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punkty w tej rundzie: 15 "
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/next_team_popUp_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Następna drużyna: Team 2 "
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/start_button_in_popUp_window"
        android:layout_width="243dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:text="@string/start_button" />

</LinearLayout>